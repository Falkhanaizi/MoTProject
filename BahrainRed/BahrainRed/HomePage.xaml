<?xml version="1.0" encoding="UTF-8"?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BahrainRed.HomePage" Title="Home" BackgroundColor="Transparent" x:Name="UpdatesHomePage">
	<CarouselPage.ItemTemplate>
		<DataTemplate>
			<ContentPage>
				<RelativeLayout BackgroundColor="Transparent">
					<Image Source="{Binding UpdateImage}" Aspect="AspectFill" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width}" RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height}" />
					<Label Text="{Binding UpdateText}" FontSize="14" FontAttributes="Bold" BackgroundColor="#FF720000" Opacity="0.75" HorizontalOptions="Center" WidthRequest="150" TextColor="White" LineBreakMode="WordWrap" RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Factor=1,Constant=-160}" RelativeLayout.YConstraint="{ConstraintExpression Type=Constant, Constant=20}"/>
				</RelativeLayout>
			</ContentPage>
		</DataTemplate>
	</CarouselPage.ItemTemplate>
</CarouselPage>