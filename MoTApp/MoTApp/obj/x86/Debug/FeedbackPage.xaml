<Page
    x:Class="MoTApp.FeedbackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoTApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="FeedbackPageStyles.xaml"/>
                <ResourceDictionary Source="MainPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/ScreenBackground.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="FeedBack" 
                   Style="{StaticResource ScreenLabel}"/>
            <TextBlock Text="We highly appreciate your feedback to help us improve our services"
                   TextAlignment="Center"
                   Style="{StaticResource feedbackLabels}"/>
            <TextBlock Text="Name" Style="{StaticResource feedbackLabels}"/>
            <TextBox/>
            <TextBlock Text="Phone" Style="{StaticResource feedbackLabels}"/>
            <TextBox/>
            <TextBlock Text="E-mail" Style="{StaticResource feedbackLabels}"/>
            <TextBox/>
            <TextBlock Text="Your FeedBack" Style="{StaticResource feedbackLabels}"/>
            <TextBox Height="150" TextWrapping="Wrap"/>
        </StackPanel>

        <RelativePanel Grid.Row="1" 
                    Background="White">
            <Button x:ConnectionId='1' Content="&#x2714; Submit"
                    Name="btn_Submit"
                    Style="{StaticResource BarBtns}"
                    RelativePanel.LeftOf="btn_Cancel" Background="{x:Null}"/>
            <Button x:ConnectionId='2' Content="&#x2716; Cancel"
                    Name="btn_Cancel"
                                            
                    Style="{StaticResource BarBtns}"
                    Margin="5,0,5,0"
                    RelativePanel.AlignRightWithPanel="True" Background="{x:Null}"/>
        </RelativePanel>

    </Grid>
</Page>

