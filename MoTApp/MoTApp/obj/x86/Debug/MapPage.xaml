<Page
    x:Class="MoTApp.MapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoTApp"
    xmlns:controls="using:WinRTXamlToolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="RouteAreasTextStyle">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
    </Page.Resources>
    
    <RelativePanel>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" HorizontalScrollMode="Enabled" VerticalScrollBarVisibility="Hidden" VerticalScrollMode="Enabled">
            <Image x:ConnectionId='5' x:Name="RouteMapImage" Source="Assets/33-NL.jpg" Height="700" MinHeight="700" MaxHeight="1700" Stretch="UniformToFill" VerticalAlignment="Stretch"/>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="20">
                <Button x:ConnectionId='1' x:Name="ZoomOutBtn" Background="{x:Null}" IsEnabled="False" Style="{StaticResource TextBlockButtonStyle}"                         >
                    <Image x:ConnectionId='4' x:Name="ZoomOutIcon" Source="Assets/icon_ZoomOutGray.png" Width="30" Height="30"/>
                </Button>
                <Button x:ConnectionId='2' x:Name="ZoomInBtn" Background="{x:Null}" IsEnabled="True" Style="{StaticResource TextBlockButtonStyle}"                        >
                    <Image x:ConnectionId='3' x:Name="ZoomInIcon" Source="Assets/icon_ZoomInBlack.png" Width="30" Height="30"/>
                </Button>
        </StackPanel>

    </RelativePanel>     
</Page>

