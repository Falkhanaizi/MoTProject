<Page x:ConnectionId='1'
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoTApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    x:Class="MoTApp.TripMoreInfoPage"
    xmlns:data="using:MoTApp"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="BarBtns">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="BarBtnsText">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" 
                        ImageSource="Assets/ScreenBackground.png"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <RelativePanel x:ConnectionId='2' Name="AssholeRelative">
            <Maps:MapControl ZoomInteractionMode="GestureAndControl"
                             Background="Black"
                             Height="{Binding ElementName=AssholeRelative, Path=Height}"
                             Width="{Binding ElementName=AssholeRelative, Path=Width}">
                <Maps:MapControl Height="{Binding ElementName=AssholeRelative, Path=Height}"
                             Width="{Binding ElementName=AssholeRelative, Path=Width}"/>
            </Maps:MapControl>
            <SymbolIcon x:ConnectionId='8' Symbol="Back" 
                        x:Name="icon_back"
                        Height="50" Width="40"
                        Foreground="Black"
                        RelativePanel.AlignLeftWithPanel="True"/>
        </RelativePanel>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollMode="Disabled">
            <StackPanel>
                <ListView x:ConnectionId='6'                              
                      Name="StopsList">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Gray"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate                       >
                            <local:StopDetailsTemplate/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock x:ConnectionId='7'                               />
                <TextBlock Text=""/>
            </StackPanel>
        </ScrollViewer>

        <RelativePanel Grid.Row="2" 
                    Background="White">
            <Button x:ConnectionId='3' Name="btn_Reminder"
                    Style="{StaticResource BarBtns}"
                    RelativePanel.LeftOf="btn_Save" 
                    Background="{x:Null}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#xE1FA;" 
                               FontSize="20"
                               Style="{StaticResource BarBtnsText}"/>
                    <TextBlock Text="Reminder"
                               Style="{StaticResource BarBtnsText}"/>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='4' Name="btn_Save"
                    Style="{StaticResource BarBtns}"
                    RelativePanel.LeftOf="btn_Done" 
                    Background="{x:Null}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#xE105;" 
                               FontSize="20"
                               Style="{StaticResource BarBtnsText}"/>
                    <TextBlock Text="Save"
                               Style="{StaticResource BarBtnsText}"/>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='5' Name="btn_Done"
                    Style="{StaticResource BarBtns}"
                    RelativePanel.AlignRightWithPanel="True" 
                    Background="{x:Null}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#xE19F;"
                               FontSize="20"
                               Style="{StaticResource BarBtnsText}"/>
                    <TextBlock Text="Done"
                               Style="{StaticResource BarBtnsText}"/>
                </StackPanel>
            </Button>
        </RelativePanel>

    </Grid>
</Page>

