<Page
    x:Class="MoTApp.Trip_PlannerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoTApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
            <TextBlock Text="Use the trip planner to know all your stops and timings to your destination"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       FontSize="20"
                       Foreground="White"
                       Margin="0,10,0,20"/>
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="From"
                           FontSize="24"
                           Margin="0,5,10,0"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
                <AutoSuggestBox x:ConnectionId='2' Width="250" 
                                Name="FromLocation_box"
                                FontSize="24"
                                Grid.Column="1"
                                QueryIcon="Find"
                                VerticalAlignment="Center"
                                BorderThickness="0,0,0,4" 
                                BorderBrush="Black" 
                                Background="Transparent"/>
                <TextBlock Text="To"
                           FontSize="24"
                           Grid.Row="1"
                           Margin="0,5,10,0"
                           VerticalAlignment="Center"
                           TextAlignment="Right"
                           FontWeight="Bold"/>
                <AutoSuggestBox x:ConnectionId='3' Width="250" 
                                Name="ToLocation_box"
                                FontSize="24"
                                Grid.Column="1"
                                Grid.Row="1"
                                QueryIcon="Find"
                                VerticalAlignment="Center"
                                BorderThickness="0,0,0,4" 
                                BorderBrush="Black" 
                                Background="Transparent"/>
                
                <TextBlock Text="Time"
                           FontSize="24"
                           Grid.Row="2"
                           Margin="0,10,10,10"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
                <TimePicker ClockIdentifier="24HourClock"
                            Grid.Column="1"
                            Grid.Row="2" Width="100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                <TextBlock Text="Date"
                           FontSize="24"
                           Grid.Row="3"
                           Margin="0,10,10,10"
                           TextAlignment="Right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
                <CalendarDatePicker Grid.Row="3"
                                    Grid.Column="1"
                                    FontSize="24"
                                    Width="250"/>
            </Grid>
            <Button x:ConnectionId='1' x:Name="trip_btn" Content="Find Trip" 
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,20,20,0"
                    Padding="20,10"
                    BorderBrush="#FF780000"
                    HorizontalAlignment="Right"                       />
        </StackPanel>
</Page>

